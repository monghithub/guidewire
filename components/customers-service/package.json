    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "kafkajs": "^2.2.4",
    "morgan": "^1.10.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prisma": "^7.4.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "openapi-typescript": "^7.4.0",
    "typescript": "^5.6.3"
